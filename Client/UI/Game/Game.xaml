<UserControl x:Class="Client.UI.Game.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:game="clr-namespace:Client.UI.Game"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>      
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    
        <Viewbox Grid.Row="0" 
                 Margin="30,20,30,0" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 Stretch="Uniform"> 
        
            <Canvas x:Name="MazeCanvas"
                    Background="#FFDCDCDC"/>
        </Viewbox>
    
        <game:GameScore x:Name="Hud" Grid.Row="1"/>
    </Grid>
</UserControl>
