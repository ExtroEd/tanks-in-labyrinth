<UserControl x:Class="Client.UI.Game.GameScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:assets="clr-namespace:Client.Assets">
    
    <Border Background="Transparent" 
            Padding="0,10,0,10" 
            VerticalAlignment="Bottom">
        <UniformGrid x:Name="ScoreGrid" Columns="4">
            
            <StackPanel x:Name="P1Score" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10">
                <assets:NormalTank x:Name="IconP1" 
                                   Width="120" 
                                   Height="120" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="NameP1" 
                               Text="Player 1" 
                               FontSize="36" 
                               Foreground="Black" 
                               FontWeight="Bold">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Gray" 
                                              BlurRadius="4" 
                                              ShadowDepth="0" 
                                              Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="WinsP1" 
                               Text="Wins: 0" 
                               Foreground="Black" 
                               FontSize="24"/>
                    <TextBlock x:Name="KillsP1" 
                               Text="Kills: 0" 
                               Foreground="Black" 
                               FontSize="24"/>
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="P2Score" 
                        Visibility="Collapsed" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10">
                <assets:NormalTank x:Name="IconP2" Width="120" Height="120" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="NameP2" Text="Player 2" FontSize="36" Foreground="Black" FontWeight="Bold"/>
                    <TextBlock x:Name="WinsP2" Text="Wins: 0" Foreground="Black" FontSize="24"/>
                    <TextBlock x:Name="KillsP2" Text="Kills: 0" Foreground="Black" FontSize="24"/>
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="P3Score" Visibility="Collapsed" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <assets:NormalTank x:Name="IconP3" Width="120" Height="120" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="NameP3" Text="Player 3" FontSize="36" Foreground="Black" FontWeight="Bold"/>
                    <TextBlock x:Name="WinsP3" Text="Wins: 0" Foreground="Black" FontSize="24"/>
                    <TextBlock x:Name="KillsP3" Text="Kills: 0" Foreground="Black" FontSize="24"/>
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="P4Score" Visibility="Collapsed" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <assets:NormalTank x:Name="IconP4" Width="120" Height="120" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="NameP4" Text="Player 4" FontSize="36" Foreground="Black" FontWeight="Bold"/>
                    <TextBlock x:Name="WinsP4" Text="Wins: 0" Foreground="Black" FontSize="24"/>
                    <TextBlock x:Name="KillsP4" Text="Kills: 0" Foreground="Black" FontSize="24"/>
                </StackPanel>
            </StackPanel>
            
        </UniformGrid>
    </Border>
</UserControl>
