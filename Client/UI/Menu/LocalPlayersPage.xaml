<UserControl x:Class="Client.UI.Menu.LocalPlayersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:assets="clr-namespace:Client.Assets">

    <UserControl.Resources>
        <Style x:Key="NicknameBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="0" Opacity="1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White"> <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Preparing for battle" FontSize="36" Foreground="Black" 
                       HorizontalAlignment="Center" Margin="0,0,0,50" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <UniformGrid x:Name="PlayersGrid" Columns="4" Width="1000">
                    
                    <StackPanel x:Name="P1Container" Margin="20">
                        <assets:NormalTank x:Name="TankP1" Width="70" Height="70"/>
                        <TextBlock Text="W A S D" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10"/>
                        <Rectangle x:Name="IndicatorP1" Width="30" Height="30" Stroke="Black" StrokeThickness="2" Fill="Transparent" Margin="0,5"/>
                        <TextBox x:Name="NameP1" Text="Green" Foreground="Black" Style="{StaticResource NicknameBoxStyle}" KeyDown="NameInput_KeyDown"/>
                        <TextBlock Text="READY: ` (Tilde)" Foreground="#555" HorizontalAlignment="Center" FontSize="12"/>
                    </StackPanel>

                    <StackPanel x:Name="P2Container" Margin="20">
                        <assets:NormalTank x:Name="TankP2" Width="70" Height="70"/>
                        <Canvas Width="30" Height="45" HorizontalAlignment="Center" Margin="0,10">
                            <Rectangle Width="30" Height="45" RadiusX="10" RadiusY="10" Stroke="Black" StrokeThickness="2"/>
                            <Line X1="15" Y1="0" X2="15" Y2="15" Stroke="Black" StrokeThickness="2"/>
                        </Canvas>
                        <Rectangle x:Name="IndicatorP2" Width="30" Height="30" Stroke="Black" StrokeThickness="2" Fill="Transparent" Margin="0,5"/>
                        <TextBox x:Name="NameP2" Text="Red" Foreground="Black" Style="{StaticResource NicknameBoxStyle}" KeyDown="NameInput_KeyDown"/>
                        <TextBlock Text="READY: CLICK" Foreground="#555" HorizontalAlignment="Center" FontSize="12"/>
                    </StackPanel>

                    <StackPanel x:Name="P3Container" Margin="20">
                        <assets:NormalTank x:Name="TankP3" Width="70" Height="70"/>
                        <TextBlock Text="8 4 5 6" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10"/>
                        <Rectangle x:Name="IndicatorP3" Width="30" Height="30" Stroke="Black" StrokeThickness="2" Fill="Transparent" Margin="0,5"/>
                        <TextBox x:Name="NameP3" Text="Blue" Foreground="Black" Style="{StaticResource NicknameBoxStyle}" KeyDown="NameInput_KeyDown"/>
                        <TextBlock Text="READY: Num +" Foreground="#555" HorizontalAlignment="Center" FontSize="12"/>
                    </StackPanel>

                    <StackPanel x:Name="P4Container" Margin="20">
                        <assets:NormalTank x:Name="TankP4" Width="70" Height="70"/>
                        <TextBlock Text="O K L ;" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10"/>
                        <Rectangle x:Name="IndicatorP4" Width="30" Height="30" Stroke="Black" StrokeThickness="2" Fill="Transparent" Margin="0,5"/>
                        <TextBox x:Name="NameP4" Text="Yellow" Foreground="Black" Style="{StaticResource NicknameBoxStyle}" KeyDown="NameInput_KeyDown"/>
                        <TextBlock Text="READY: ' (Apostrophe)" Foreground="#555" HorizontalAlignment="Center" FontSize="12"/>
                    </StackPanel>

                </UniformGrid>
            </StackPanel>

            <Grid Margin="0, 20, 0, 0">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Button Content="To battle!"
                            Style="{StaticResource MainButtonStyle}"
                            Click="StartGame_Click"/>
                
                    <Button Content="Back"
                            Style="{StaticResource RedButtonStyle}"
                            Click="Back_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
