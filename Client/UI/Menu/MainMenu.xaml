<UserControl x:Class="Client.UI.Menu.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Grid HorizontalAlignment="Center" Margin="0,0,0,100">
                <Border Background="#1A1A1A" 
                        CornerRadius="5" 
                        Padding="40,10"
                        BorderBrush="Gray" 
                        BorderThickness="2">
                    <Border.Effect>
                        <BlurEffect Radius="10"/>
                    </Border.Effect>
                </Border>

                <Border Background="#222" 
                        CornerRadius="3" 
                        Padding="40,10" 
                        BorderBrush="Blue" 
                        BorderThickness="2">
                    <TextBlock Text="TANKS IN LABYRINTH"
                               Foreground="White"
                               FontSize="54"
                               FontWeight="Black"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="5" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </Grid>

            <Button Content="Local Game"
                    Style="{StaticResource MainButtonStyle}"
                    Click="LocalGame_Click"/>

            <Button Content="LAN Game"
                    Style="{StaticResource MainButtonStyle}"
                    Click="LanGame_Click"/>

            <Button Content="Exit"
                    Style="{StaticResource RedButtonStyle}"
                    Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
