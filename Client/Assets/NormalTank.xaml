<UserControl x:Class="Client.Assets.NormalTank"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="70" Height="70">
    <Viewbox Stretch="Uniform">
        <Grid Width="70" Height="70" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <RotateTransform Angle="0"/>
            </Grid.RenderTransform>

            <!-- Tracks -->
            <Rectangle Fill="#252525" Width="8" Height="46" Margin="18,12,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       RadiusX="2" RadiusY="2" Stroke="Black" StrokeThickness="1"/>
            <Rectangle Fill="#252525" Width="8" Height="46" Margin="44,12,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       RadiusX="2" RadiusY="2" Stroke="Black" StrokeThickness="1"/>

            <!-- Hull -->
            <Grid Margin="24,12,0,0" Width="22" Height="46"
                  HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle x:Name="BodyArmor"
                           Fill="Green"
                           Stroke="Black"
                           StrokeThickness="1"/>
            </Grid>

            <!-- Barrel -->
            <Grid Margin="31,3,0,0" Width="8" Height="25"
                  HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle x:Name="GunBarrel"
                           Fill="Green"
                           Stroke="Black"
                           StrokeThickness="1"
                           RadiusX="1" RadiusY="1"/>
            </Grid>

            <!-- Turret -->
            <Grid Margin="22,22,0,0" Width="26" Height="26"
                  HorizontalAlignment="Left" VerticalAlignment="Top">
                <Ellipse x:Name="Turret"
                         Fill="Green"
                         Stroke="Black"
                         StrokeThickness="1"/>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>
